@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category </h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-warning"></div>
		<div class="mb-3 row p-1">
			<input type="hidden" asp-for="Category.Id" />
			<label asp-for="Category.Name" class="p-0"></label>
			<input asp-for="Category.Name" class="form-control" />
			<span asp-validation-for="Category.Name" class="text-danger"> </span>

		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Category.DisplayOrder" class="p-0"> </label>
			<input asp-for="Category.DisplayOrder" class="form-control" />
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"> </span>
		</div>


		<div class="mb-3 row p-1">
			<div class="form-check">
				<input asp-for="Category.IsVerified" class="form-check-input alert-primary" type="checkbox" />
				<label asp-for="Category.IsVerified" class="form-check-label" for="isVerified">Is Verified</label>
			</div>
			@* <span asp-validation-for="IsVerified" class="text-danger"></span> *@
		</div>
		

		<div class="row p-1">
			<div class="col-6 col-md-3 p-0">
				<button type="submit" class="btn btn-primary form-control">Update</button>
			</div>

			<div class="col-6 col-md-3 ps-2">
				<a asp-page="Categories/index" class="btn btn-outline-secondary form-control">Back to List</a>
			</div>

		</div>
	</div>
</form>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}