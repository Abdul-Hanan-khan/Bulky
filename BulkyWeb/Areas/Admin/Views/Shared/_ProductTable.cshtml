@model List<Product>

<div class="table-responsive" style="max-height: 400px; overflow-y: auto; border: 1px solid #dee2e6; scrollbar-width:none">
    <table class="table table-bordered table-striped" style="border-collapse: separate; border-spacing: 0;">
        <thead class="table-light" style="position: sticky; top: 0; z-index: 1; background-color: #f8f9fa;">
            <tr>
                <th style="border: 1px solid #dee2e6;">Title</th>
                <th style="border: 1px solid #dee2e6;">ISBN</th>
                <th style="border: 1px solid #dee2e6;" class="text-center">Price</th>
                <th style="border: 1px solid #dee2e6;">Author</th>
                <th style="border: 1px solid #dee2e6;" class="text-center">Category</th>
                <th style="border: 1px solid #dee2e6;" class="text-center">Actions</th>
        
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td style="border: 1px solid #dee2e6;">@obj.Title</td>
                        <td style="border: 1px solid #dee2e6;">@obj.ISBN</td>
                        <td style="border: 1px solid #dee2e6;" class="text-center">@obj.Price</td>
                        <td style="border: 1px solid #dee2e6;">@obj.Author</td>
                        <td style="border: 1px solid #dee2e6;" class="text-center">@obj.Category.Name</td>

                        <td style="border: 1px solid #dee2e6;" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            } 
            else
            {
                <tr>
                    <td colspan="3" class="text-center" style="border: 1px solid #dee2e6;">No categories found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
