@model ProductVM

<div class="card border shadow mt-2 mb-5">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Product </h2>
			</div>

		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<div class=" p-3 ">

				@* <div asp-validation-summary="All" class="text-warning"></div> *@
				<div class="form-floating py-2 col-12 ">
					<input asp-for="Product.Title" class="form-control border-0 shadow"/>
					<label asp-for="Product.Title" class="fw-semibold pt-4"></label>
					<span asp-validation-for="Product.Title" class="text-danger"> </span>

				</div>

				<div class="form-floating py-2 col-12 mt-2">
					<input asp-for="Product.Description" class="form-control border-0 shadow" />
					<label asp-for="Product.Description" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.Description" class="text-danger"> </span>
				</div>


				<div class="form-floating py-2 col-12 mt-2">
					<input asp-for="Product.ISBN" class="form-control border-0 shadow" />
					<label asp-for="Product.ISBN" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.ISBN" class="text-danger"> </span>
				</div>
				<div class="form-floating py-2 col-12 mt-2">
					<input asp-for="Product.Author" class="form-control border-0 shadow" />
					<label asp-for="Product.Author" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.Author" class="text-danger"> </span>
				</div>
				<div class="form-floating py-2 col-12 mt-2">
					<input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
					<label asp-for="Product.ListPrice" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.ListPrice" class="text-danger"> </span>
				</div>
				<div class="form-floating py-2 col-12 mt-2">
					<input asp-for="Product.Price" class="form-control border-0 shadow" />
					<label asp-for="Product.Price" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.Price" class="text-danger"> </span>
				</div>
				<div class="form-floating py-2 col-12 mt-2">
					<input asp-for="Product.Price50" class="form-control border-0 shadow" />
					<label asp-for="Product.Price50" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.Price50" class="text-danger"> </span>
				</div>
				<div class="form-floating py-2 col-12 mt-2">
					<input asp-for="Product.Price100" class="form-control border-0 shadow" />
					<label asp-for="Product.Price100" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.Price100" class="text-danger"> </span>
				</div>
				
				<div class="form-floating py-2 col-12 mt-2">
					<input type="file" class="form-control border-0 shadow" />
					<label asp-for="Product.ImageUrl" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.ImageUrl" class="text-danger"> </span>
				</div>



				<div class="form-floating py-2 col-12 mt-2">
					<select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
						<option disabled selected >
							--Select Category--
						</option>
					</select>
					<label asp-for="Product.CategoryId" class="fw-semibold pt-4"> </label>
					<span asp-validation-for="Product.CategoryId" class="text-danger"> </span>
				</div>



				<div class="row pt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>

					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary  form-control">Back to List</a>
					</div>

				</div>
			</div>
		</form>
	</div>
</div>



@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}